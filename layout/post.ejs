<!-- hljs -->
<%- css('lib/hljs/github.css') %>


<% if (!page.hideTitle) { %>
  <div class="mb-2">
    <h1 class="fs-2 mb-1"><%= page.title %></h1>

    <section class="d-flex align-items-center em-6 mb-2 link-secondary">
      <time><%= date(page.date, "YYYY-MM-DD") %></time>
      <ul class="m-0">
        <% page.tags.forEach((tag) => { %>
          <a href="<%- tag.permalink %>" class="text-reset"><%- tag.name %></a>
        <% }) %>
      </ul>
    </section>
  </div>
<% } %>


<main class="markdown-body lh-lg">
  <%- page.content %>
</main>