@import url("https://fonts.googleapis.com/css?family=Crimson+Text:400,700|Press+Start+2P");

@font-face 
  font-family: "Kagami Emoji";
  src: local("Apple Color Emoji"),local("Segoe UI Emoji"),local("Segoe UI Symbol"),local("Noto Color Emoji"),local("Android Emoji")

body
  font-size: 18px;
  font-family: "Crimson Text", "PingFangSC-Light", "Microsoft YaHei Light","Kagami Emoji";

html, body
  height: 100%;

.markdown-body
  a
    text-decoration: none;
    color: inherit;
    border-bottom: 1px dotted currentColor;

  blockquote
    padding: 0 1em;
    color: #57606a;
    border-left: 0.25em solid #d0d7de;


.dash-line
  border-bottom: 1px dashed #6c757d;

.line-bottom
  border-bottom: 1px solid;

.line-top
  border-top: 1px solid;

.list-style-none
  list-style: none;

.em-6
  font-size: .6em;
  
.em-8
  font-size: .8em;

.em-4
  font-size: .4em;


.markdown-body
  li
    margin: .3em 0;

  img
    display: block;
    max-width: 100%;
    max-height: 400px;
    margin: 1em auto;

  code
    padding: 0.2em 0.4em;
    margin: 0;
    font-size: 85%;
    background-color: rgb(246, 248, 250);
    border-radius: 6px;
    color: rgb(36, 41, 47)

  table
    display: block;
    width: 100%;
    width: max-content;
    max-width: 100%;
    overflow: auto;

    tr
      background-color: #ffffff;
      border-top: 1px solid #d8dee4;

    tr:nth-child(2n)
      background-color: #f6f8fa;
    
    th,td
      padding: .2em .4em;
      border: 1px solid #d0d7de;
    
    th
      font-weight: bold;
      text-align: center;

.tag-list-count, .category-list-count, .archive-list-count
  margin-left: 1em;