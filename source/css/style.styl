
html, body
  height: 100%;

body
  font-size: 14px;
  font-family:  monospace, "PingFangSC-Light", "Microsoft YaHei Light";

// 宽度大于 576px(bootstrap sm size) max-width 设置为 576px
// 宽度小于  576px 则 max-width 为 100%
body
  max-width: 100%;
@media (min-width: 576px)
  .container, .container-lg, .container-md, .container-sm
      max-width: 576px;


.list-style-none
  list-style: none;

.em-6
  font-size: .6em;
.em-8
  font-size: .8em;
.em-4
  font-size: .4em;

.tag-md
  font-size: 1.5em;
.tag-lg
  font-size: 1.5em;

// 超链接样式
a
  text-decoration: none;
  color: inherit;
  border-bottom: 1px dotted currentColor;

// 正文样式
.markdown-body
  // 引文样式
  blockquote
    padding: 0 1em;
    color: #57606a;
    border-left: 0.25em solid #d0d7de;

  // 增大标题间距
  .h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6
    margin: 1em 0 .5em 0;

  li
    margin: .3em 0;

  // 图片样式
  img
    display: block;
    max-width: 100%;
    max-height: 400px;
    margin: 1em auto;

  // 代码块样式
  code
    padding: 0.2em 0.4em;
    margin: 0;
    font-size: 85%;
    background-color: rgb(246, 248, 250);
    border-radius: 6px;
    color: rgb(36, 41, 47)

  // 表格样式
  table
    display: block;
    width: 100%;
    width: max-content;
    max-width: 100%;
    overflow: auto;

    tr
      background-color: #ffffff;
      border-top: 1px solid #d8dee4;

    tr:nth-child(2n)
      background-color: #f6f8fa;
    
    th,td
      padding: .2em .4em;
      border: 1px solid #d0d7de;
    
    th
      font-weight: bold;
      text-align: center;

// hexo list_tags 样式
.tag-list-count, .category-list-count
  margin-left: 1em;