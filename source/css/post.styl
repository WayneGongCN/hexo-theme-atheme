#post-title
  color titleColor
  margin .3rem 0

.post-info
  font-size: subSize
  display flex
  flex-direction row

  .tag-list
    display flex
    flex-direction row
    margin-left: .5rem
    .tag-item
      margin-right: .5rem
    .tag-list-count
      display none


.markdown-body
  margin 1.5rem 0
  font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji;